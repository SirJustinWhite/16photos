<div class="container well col-sm-10 col-sm-offset-1 ">
<% provide(:title, @user.username) %>
	<div class="col-lg-4 center">
		<h1>
		  <%= gravatar_for @user %>
		  <%= @user.username %>
		  <%= image_tag @user.avatar_url %>
		</h1>
		<h4>
			<ul class="list-inline center">
				<li>Posts <br /> <%= current_user.posts.count %></li>
				<li>Followers <br /> #</li>
				<li>Following <br /> #</li>
			</ul>
		</h4>

		 <hr />
	</div>

	<div class="col-lg-8">
		<%= render 'photogrid' %>
	</div>
</div> 



