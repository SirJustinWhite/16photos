<% provide(:title, "Forgot Password") %>

<div class="row">
	<div class="container well col-sm-8 col-sm-offset-2 col-xs-10 col-xs-offset-1">
  <h1>Forgot Password</h1>
    <%= form_for(:password_reset, html: { class: "form-horizontal" }, url: password_resets_path) do |f| %>

        <div class="form-group">
          <%= f.label :email, class: 'col-sm-2 control-label' %>
          <div class="col-sm-10">
            <%= f.email_field :email, class: 'form-control', :placeholder => "email@example.com" %>   
          </div>
        </div>
       
        <%= f.submit "Reset Password", class: "btn btn-danger col-xs-12" %>
    <% end %>

  </div>
</div>