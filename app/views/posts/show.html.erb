<div class="container well">
		<div class="row posts-wrapper">
			<div class="post">
				<div class="post-head">
					<p class="name"><%= @post.user.username %></p> 
				</div>
				<%= image_tag @post.image.url(:medium), :class => "img-responsive center-block" %>
				<p class="caption">
					<%= @post.caption %>
					<%= link_to "Back", posts_path, :class => "btn btn-primary pull-right" %> 
					<% if @post.user.id == current_user.id %>
					<%= link_to "Edit", edit_post_path(@post), :class => "btn btn-warning pull-right" %>
					<% end %>
				</p>
			</div>
		</div>
</div>